{% extends 'base.html.twig' %}

{% block title %}Gestion des Clients{% endblock %}

{% block page_title %}Gestion des Clients{% endblock %}

{% block page_content %}
    <div class="container mx-auto px-4 py-8">
        <div class="flex justify-between items-center mb-6">
            <h1 class="text-3xl font-bold">Gestion des Clients</h1>
            {% if is_granted('CLIENT_CREATE') %}
                <a href="{{ path('client_new') }}" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
                    Ajouter un Client
                </a>
            {% endif %}
        </div>

        {% if clients %}
            <div class="overflow-x-auto">
                <table class="min-w-full bg-white border border-gray-300 rounded-lg shadow">
                    <thead class="bg-gray-100 border-b-2 border-gray-300">
                        <tr>
                            <th class="px-6 py-3 text-left text-sm font-semibold text-gray-700">Nom Complet</th>
                            <th class="px-6 py-3 text-left text-sm font-semibold text-gray-700">Email</th>
                            <th class="px-6 py-3 text-left text-sm font-semibold text-gray-700">Téléphone</th>
                            <th class="px-6 py-3 text-left text-sm font-semibold text-gray-700">Adresse</th>
                            <th class="px-6 py-3 text-left text-sm font-semibold text-gray-700">Créé le</th>
                            <th class="px-6 py-3 text-center text-sm font-semibold text-gray-700">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for client in clients %}
                            <tr class="border-b border-gray-300 hover:bg-gray-50">
                                <td class="px-6 py-4 text-sm text-gray-700 font-semibold">{{ client.fullName }}</td>
                                <td class="px-6 py-4 text-sm text-gray-700">{{ client.email }}</td>
                                <td class="px-6 py-4 text-sm text-gray-700">{{ client.phoneNumber ?? '-' }}</td>
                                <td class="px-6 py-4 text-sm text-gray-700">{{ client.address ?? '-' }}</td>
                                <td class="px-6 py-4 text-sm text-gray-700">{{ client.createdAt.format('d/m/Y') }}</td>
                                <td class="px-6 py-4 text-center text-sm space-x-2">
                                    {% if is_granted('CLIENT_EDIT', client) %}
                                        <a href="{{ path('client_edit', {id: client.id}) }}" class="inline-block bg-yellow-500 hover:bg-yellow-700 text-white font-bold py-1 px-3 rounded text-xs">
                                            Modifier
                                        </a>
                                    {% endif %}
                                    {% if is_granted('CLIENT_DELETE', client) %}
                                        <form method="POST" action="{{ path('client_delete', {id: client.id}) }}" style="display:inline;" onsubmit="return confirm('Vous êtes sûr de vouloir supprimer ce client?');">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ client.id) }}">
                                            <button type="submit" class="bg-red-500 hover:bg-red-700 text-white font-bold py-1 px-3 rounded text-xs">
                                                Supprimer
                                            </button>
                                        </form>
                                    {% endif %}
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        {% else %}
            <div class="bg-gray-100 border border-gray-300 rounded px-4 py-3 text-gray-700">
                Aucun client trouvé.
            </div>
        {% endif %}
    </div>
{% endblock %}
