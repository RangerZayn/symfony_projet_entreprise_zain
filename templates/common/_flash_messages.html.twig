{% for message in app.flashes('success') %}
    <div class="fixed top-4 right-4 bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded shadow-lg z-50">
        <div class="flex justify-between items-center">
            <span>{{ message }}</span>
            <button type="button" class="ml-4 font-semibold text-green-700 hover:text-green-900">&times;</button>
        </div>
    </div>
{% endfor %}

{% for message in app.flashes('error') %}
    <div class="fixed top-4 right-4 bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded shadow-lg z-50">
        <div class="flex justify-between items-center">
            <span>{{ message }}</span>
            <button type="button" class="ml-4 font-semibold text-red-700 hover:text-red-900">&times;</button>
        </div>
    </div>
{% endfor %}

{% for message in app.flashes('info') %}
    <div class="fixed top-4 right-4 bg-blue-100 border border-blue-400 text-blue-700 px-4 py-3 rounded shadow-lg z-50">
        <div class="flex justify-between items-center">
            <span>{{ message }}</span>
            <button type="button" class="ml-4 font-semibold text-blue-700 hover:text-blue-900">&times;</button>
        </div>
    </div>
{% endfor %}

<script>
    document.querySelectorAll('.fixed').forEach(alert => {
        setTimeout(() => {
            alert.style.display = 'none';
        }, 5000);
    });
    
    document.querySelectorAll('button[type="button"]').forEach(btn => {
        btn.addEventListener('click', () => {
            btn.closest('.fixed').style.display = 'none';
        });
    });
</script>


